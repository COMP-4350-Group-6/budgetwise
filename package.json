{
  "name": "@root/budgeting",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:int": "turbo run test:int",
    "test:critical": "pnpm --filter api run test:critical",
    "test:e2e": "pnpm --filter @budgetwise/e2e-tests run test:e2e",
    "test:smoke": "pnpm --filter @budgetwise/e2e-tests run test:smoke",
    "test:smoke:all": "pnpm --filter @budgetwise/e2e-tests run test:smoke:all",
    "test:smoke:production": "pnpm --filter @budgetwise/e2e-tests run test:smoke:production",
    "test:smoke:production:all": "pnpm --filter @budgetwise/e2e-tests run test:smoke:production:all",
    "test:auth": "pnpm run test:auth:unit && pnpm run test:auth:integration",
    "test:auth:unit": "pnpm --filter api run test:auth",
    "test:auth:integration": "pnpm --filter @budget/adapters-auth-supabase run test:integration",
    "test:coverage": "turbo run test -- --coverage && pnpm run coverage:merge",
    "coverage:merge": "node scripts/merge-coverage.mjs",
    "coverage:html": "genhtml coverage/lcov.info -o coverage/html",
    "coverage:view": "xdg-open coverage/html/index.html || open coverage/html/index.html",
    "coverage:report": "pnpm run test:coverage && pnpm run coverage:html && pnpm run coverage:view",
    "deploy:api": "pnpm --filter ./apps/api exec wrangler deploy",
    "deploy:frontend": "pnpm run --filter ./apps/frontend deploy",
    "deploy": "pnpm run deploy:api && pnpm run deploy:frontend",
    "openapi:generate": "pnpm --filter @budget/schemas run openapi:generate && pnpm --filter @budget/sdk run generate"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.37.0",
    "eslint-plugin-security": "^3.0.1",
    "hono": "^4.9.11",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.14",
    "zod": "^4.1.12"
  }
}
