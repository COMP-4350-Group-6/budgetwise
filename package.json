{
  "name": "@root/budgeting",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "pnpm test:unit && pnpm test:int",
    "test:unit": "vitest --run -c vitest.unit.config.ts",
    "test:int": "vitest --run -c vitest.int.config.ts",
    "test:watch": "vitest -c vitest.unit.config.ts",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "test:auth": "pnpm run test:auth:unit && pnpm run test:auth:integration",
    "test:auth:unit": "pnpm --filter api run test:auth",
    "test:auth:integration": "pnpm --filter @budget/adapters-auth-supabase run test:integration",
    "deploy:api": "pnpm --filter ./apps/api exec wrangler deploy",
    "deploy:frontend": "pnpm run --filter ./apps/frontend deploy",
    "deploy": "pnpm run deploy:api && pnpm run deploy:frontend",
    "openapi:generate": "pnpm --filter @budget/schemas run openapi:generate && pnpm --filter @budget/sdk run generate"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.37.0",
    "hono": "^4.9.11",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "recharts": "^3.3.0"
  }
}
