{
  "name": "api",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc -p tsconfig.json && wrangler deploy --dry-run",
    "typecheck": "tsc -p tsconfig.json",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:int": "vitest run tests/integration/*.int.test.ts",
    "test:critical": "vitest run -t @critical",
    "test:auth": "vitest run src/middleware/auth.test.ts",
    "deploy": "wrangler deploy"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "dotenv": "^17.2.3",
    "jose": "^5.10.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.2"
  },
  "dependencies": {
    "@budget/composition-cloudflare-worker": "workspace:*",
    "@budget/schemas": "workspace:*",
    "@hono/zod-validator": "^0.7.4",
    "hono": "^4.9.11",
    "zod": "^4.1.12"
  }
}
