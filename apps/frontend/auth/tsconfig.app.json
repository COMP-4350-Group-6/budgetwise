{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@budget/schemas": ["../../../packages/schemas/src/index.ts"],
      "@budget/composition-web-auth-api": ["../../../packages/composition/web-auth-api/src/index.ts"],
      "@budget/adapters-auth-api": ["../../../packages/adapters/auth-api/src/index.ts"],
      "@budget/ports": ["../../../packages/ports/src/index.ts"],
      "@budget/ports/*": ["../../../packages/ports/src/*"],
      "@budget/usecases": ["../../../packages/usecases/src/index.ts"],
      "@budget/domain/*": ["../../../packages/domain/src/*"]
    }
  }
}
