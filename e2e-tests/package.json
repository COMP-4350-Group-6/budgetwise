{
  "name": "@budgetwise/e2e-tests",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end and smoke tests for BudgetWise",
  "scripts": {
    "test:e2e": "playwright test tests/",
    "test:smoke": "playwright test smoke-tests/ --project=chromium",
    "test:smoke:all": "playwright test smoke-tests/",
    "test:smoke:production": "PRODUCTION_URL=https://budgetwise.ca API_URL=https://api.budgetwise.ca playwright test smoke-tests/ --project=chromium",
    "test:smoke:production:all": "PRODUCTION_URL=https://budgetwise.ca API_URL=https://api.budgetwise.ca playwright test smoke-tests/",
    "test:smoke:preview": "playwright test smoke-tests/ --project=chromium",
    "test:headed": "playwright test --headed --project=chromium",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug --project=chromium",
    "report": "playwright show-report",
    "install:browsers": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.6.3"
  }
}
